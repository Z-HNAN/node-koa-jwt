{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
      "airbnb-base",
      "plugin:node/recommended"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018
  },
  "rules": {
    "semi": "off",
    "arrow-parens": "off",
    "no-console": "off",
    "node/no-unsupported-features/es-syntax": "off"
  }
}